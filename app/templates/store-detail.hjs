<h3 class="title">{{name}}</h3>

<div class="desc-container">
	<h4>{{i18n.store.installation}} <span class="legend">{{i18n.store.instructions}}</span></h4>

	{{#sizes}}
		<section class="handle" data-size="{{0}}">{{1}}</section>
	{{/sizes}}

	<h4>{{i18n.store.description}}</h4>

	<div class="desc">
		{{{desc}}}
	</div>
</div>

<div class="preview-container">
	<h4>{{i18n.store.preview}}</h4>

	<div class="preview"></div>
</div>